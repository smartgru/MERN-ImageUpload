{
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "rules": {
    "prefer-destructuring": 0,
    "prefer-const": [0, { "destructuring": "all" }],
    "one-var": 0,
    "arrow-body-style": 1,
    "global-require:": 0,
    "import/no-dynamic-require": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "mocha/no-exclusive-tests": "error",
    "no-plusplus": "off",
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "__t"],
        "allowAfterThis": true
      }
    ]
  },
  "extends": ["airbnb-base", "plugin:import/errors", "prettier"],
  "plugins": ["promise", "import", "mocha", "chai-friendly"],
  "globals": {
    "_": true
  }
}
